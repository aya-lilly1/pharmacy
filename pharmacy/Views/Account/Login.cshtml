<body style="font-family:Roboto">

    <div class="container-fluid p-0">
        <div class="row m-0">
            <!-- Left Part - Login Form -->
            <div class="col-md-6 ">
                <form style="width:75% ;margin:20% auto">
                    <h2 style="font-size:33px;">Get Started <i style="color:#A7CC3A!important;" class="fa-solid fa-arrow-right"></i> </h2>
                    <p class="font-weight-light" style="color:#707070!important;font-size:15px;">
                        If you are already our customer, please enter your account number to
                        proceed to your account
                    </p>
                    <div class="form-group">

                        <input style="background-color:#F9F9F9;font-size:12px;border:1px solid #989898" type="text" class="form-control mb-2" id="username" placeholder=" Pharmacy Code">
                    </div>
                    <div class="form-group">

                        <input style="background-color:#F9F9F9;font-size:12px;border:1px solid #989898" type="password" class="form-control mb-3" id="password" placeholder=" Password">
                    </div>
                    <button type="submit" class="btn btn-primary col-md-12 " style="color:white;border-radius:20px; background-color:#0093DD;border:none;font-size:15px">SIGN IN  >></button>

                    <div style=" display: flex; align-items: center;margin:5px 0">
                        <hr style=" flex-grow: 1;" class="col-md-5" /> <span class="m-2" style="color: #707070">OR</span><hr style="flex-grow: 1;" class="col-md-5" />
                    </div>
                    <a style="color:#0093DD">Click here to Enter your pharmacy location </a>
                </form>

            </div>

            <!-- Right Part - Picture -->
            <div class="col-md-6 p-0 image-container h-100 overflow-hidden ">

